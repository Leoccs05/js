{
    "compilerOptions": {
      "module": "NodeNext",              // Especifica o módulo como NodeNext
      "moduleResolution": "NodeNext",    // Configura a resolução de módulo para NodeNext
      "target": "esnext",                // Define o alvo para ESNext (você pode ajustar se necessário)
      "esModuleInterop": true,           // Permite interoperabilidade de módulos ES6 com CommonJS
      "skipLibCheck": true,              // Opcional: Ignora checagem de bibliotecas (mais rápido)
      "resolveJsonModule": true,         // Se você precisar importar arquivos JSON
      "strict": true                     // Para ativar verificações estritas (opcional)
    }
  }